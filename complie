if [ $1. = 'help'. ];then
    echo "This script accept only one argument, It can be as follows:"
    echo "    help: print this message"
    echo "    clean: clean all the temporary file generated by latex after complie finished, or ignore the temporary file without this argument, "
    echo "    this would make the working directory clean but may increase the time spent in next complie."
    echo "Usage example:"
    echo "    ./complie help"
    exit 0    
fi

xelatex main
bibtex main
xelatex main
xelatex main
if [ $1. = 'clean'.  ];then
    rm *.aux
    rm main.big
    rm main.log
    rm main.toc
    rm main.fls
fi
